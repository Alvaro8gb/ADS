
class Ipod:
    def __init__(self):
        self.songs =[]
        self.playlist =[]
        self.recently =[]
        self.total_play =[]
    def addSongs(self, S,A,D):
        if S in self.songs:
            raise ValueError("Song already exists")
        else:
            self.songs[S] =(A,D)
    def addToPlaylist(self,S):
        if S in self.playlist:
            raise ValueError("Song already in playlist")
        if S not in self.playlist:
            raise ValueError("Song not in Ipod")
        else:
            if S not in self.playlist:
                self.playlist.append(S)
    def current(self):
        if not self.playlist:
            return "Empty"
        return self.playlist[0]
    def play(self):
        if not self.playlist:
            return "No hay canciones en la lista."
        song = self.playlist.pop(0)
        self.total_play -= self.songs[song]

        if song in self.recently:
            self.recently.remove(song)
        self.recently.insert(0,song)
        return f"Sonando {song}"
    def recent(self,N):
        if not self.recently:
            return "No hay cancines recientes " # finish this function
        return f"Las R mas recientes" #finish this where the recent songs are actually displayed
    def totalTime(self):
        if not self.playlist:
            return 0
        return f" Timepo total {self.total_play}"
    def deleteSong(self,S):
        if S in self.songs:
            self.songs.remove(S)
